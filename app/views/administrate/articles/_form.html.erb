<%= form_with(model: [:administrate, article]) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :cover_image, style: "display: block" %>
    <%= form.file_field :cover_image %>
  </div>

  <div id=<%= dom_id(article) %>>
    <%= image_tag article.cover_image.variant(:thumb) if article.cover_image.attached? %>

    <%= link_to "Remover",
      destroy_cover_image_administrate_article_path(article),
      data: {"turbo-confirm": "Tem certeza?", "turbo-method": :delete } if article.cover_image.attached? %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<div class="row">
  <form action="#" class="form">
    <div class="input-row">
      <div class="input-container">
        <label for="#" class="label">Título</label>
        <input type="text" placeholder="Digite aqui o título do post" class="input">
      </div>
    </div>
    <div class="input-row">
      <div class="input-container">
        <label for="#" class="label">Descrição</label>
        <input type="text" placeholder="Digite aqui a descrição do post" class="input">
      </div>
    </div>
    <div class="input-row">
      <div class="input-container">
        <label for="#" class="label">Conteúdo</label>
        <textarea rows="18" class="textarea" placeholder="Escreva aqui o conteúdo do post"></textarea>
      </div>
    </div>
  </form>
</div>