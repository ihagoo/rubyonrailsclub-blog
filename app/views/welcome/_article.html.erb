<a href="post.html" class="item">
  <%=
        if article.cover_image.attached?
            image_tag(article.cover_image.variant(:thumb), class: "item-image", alt: "post 1")
        else
            image_tag("posts/post1.jpg", class: "item-image", alt: "post 1")
        end
  %>
  <div class="item-row">
    <div class="item-category">Backend</div>
    <div class="item-comments">25</div>
  </div>
  <div class="item-row">
    <div class="item-title"><%= article.title %></div>
  </div>
  <div class="item-row">
    <div class="item-author">Jackson Pires</div>
    <div class="item-date">15 de set</div>
  </div>
</a>